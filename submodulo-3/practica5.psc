Algoritmo practica5
	// Dado los numeros de la semana
	// Se imprimima el nombre correspondiente
	Escribir "Dame un numero <1-7>: ";
	Leer dia;
	Segun dia Hacer
		1:
			Escribir "Lunes";
		2:
			Escribir "Martes";
		3:
			Escribir "Miercoles";
		4:
			Escribir "Jueves";
		5:
			Escribir "Viernes";
		6:
			Escribir "Sabado";
		7:
			Escribir "Domingo";
		De Otro Modo:
			Escribir "Dia de la semana invalido";
	Fin Segun
FinAlgoritmo
